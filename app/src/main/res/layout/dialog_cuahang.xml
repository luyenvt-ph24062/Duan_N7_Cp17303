<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_x"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/id_cuahang_tencuahang"
            android:textSize="20dp"
            android:text="Cuahangn07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:id="@+id/id_cuahang_email"
            android:text="email"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/id_cuahang_sdt"
            android:text="so dien thoai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/id_cuahang_diachi"
            android:text="dia chi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:gravity="center"
            android:textSize="16dp"
            android:text="Cảm ơn quý khách đã tin dùng!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>