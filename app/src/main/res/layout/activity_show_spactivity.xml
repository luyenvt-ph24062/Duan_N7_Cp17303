<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Activity.ShowSPActivity">
    <LinearLayout
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginBottom="20dp"
            android:id="@+id/id_quaylai"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_quaylai"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/img_showsp"
            android:layout_width="300dp"
            android:layout_height="300dp"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="42dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/id_showtensp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="TEN SP"
            android:textColor="#F60707"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="354dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="right"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="20000"
        android:id="@+id/id_showgiatien"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="600dp" />

    <LinearLayout
        android:background="#FFEB3B"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="643dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="#B8B8B5"
            app:cardCornerRadius="0dp">
            <ImageView
                android:id="@+id/imgBinhLuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_binhluan" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="#B8B8B5"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="0dp">

            <ImageView
                android:id="@+id/imgYeuThich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_yeuthich" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:backgroundTint="#FF5722"
            android:layout_marginLeft="5dp"
            app:cardCornerRadius="0dp">
            <TextView
                android:id="@+id/id_tvThem"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm Giỏ Hàng"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>